# Development Dockerfile with hot reload
FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including devDependencies)
RUN npm ci

# Copy the rest of the application
COPY . .

# Expose port 3000
EXPOSE 3000

# Start development server with webpack explicitly (better Docker support)
CMD ["sh", "-c", "npm run dev -- --webpack"]
